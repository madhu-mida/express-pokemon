<!DOCTYPE html>
<html lang="en">

<%- include("partials/head.ejs") %>

    <body>
        <nav class="navbar navbar-light bg-light">
            <h1 class="title-header">Pokemon</h1>

            <a class="add-pokemon" href="/pokemon/new">
                Add Pokemon
            </a>

            <!-- <button type="button" data-bs-toggle="collapse" data-target="#navbarNav" class="navbar-toggler"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            </button> -->

        </nav>
        <div>
            <a href="/pokemon/new">Create a New Pokemon</a>
        </div>
        <div>
            <% allPokemon.forEach(function (element,index) { %>
                <a href="/pokemon/<%=index%>">
                    <img src="<%= element.img %>" alt="<%= element.name %>"><br />
                </a>
                <form action="/pokemon/<%=index%>/edit">
                    <input type="submit" value="Edit">
                </form>
                <form action="/pokemon/<%=index%>?_method=DELETE" method="post">
                    <input type="submit" value="Delete">
                </form>
                <% }) %>
        </div>

    </body>

</html>